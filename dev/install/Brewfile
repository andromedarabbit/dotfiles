cask_args appdir: '/Applications'

# GNU tools
## See https://www.topbug.net/blog/2013/04/14/install-and-use-gnu-command-line-tools-in-mac-os-x/
brew 'coreutils'

tap 'homebrew/dupes'
brew 'gnu-tar', args: ['—with-default-names']
brew 'gnu-which', args: ['—with-default-names']
brew 'grep', args: ['—with-default-names']
brew 'gzip'
brew 'lsof'
brew 'rsync'
brew 'colordiff'
# send files to OSX trash instead of deleting them
brew 'rmtrash'


# Development
cask 'sourcetree'
cask 'p4merge'

cask 'tunnelblick'

cask 'redis'

# Databases
brew 'mysql'
cask 'mysqlworkbench'

# Install Cyberduck and its command line interface. See https://duck.sh/
cask 'cyberduck'
brew 'duck'

# Install the download accelerator
brew 'axel'
brew 'aria2'

# See http://blog.outsider.ne.kr/1159
brew 'ngrok'

# See https://stackoverflow.com/questions/2925606/how-to-create-a-cpu-spike-with-a-bash-command
brew 'stress'

cask 'sshfs'
brew 's3cmd'

# cask 'manopen'

# Android
brew 'android-sdk'
